{
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": false,
  "bracketSpacing": true,
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "options": {
        "parser": "typescript",
        "semi": true,
        "singleQuote": false,
        "trailingComma": "es5",
        "tabWidth": 2,
        "useTabs": false,
        "jsxBracketSameLine": false,
        "arrowParens": "always",
        "printWidth": 80,
        "quoteProps": "as-needed",
        "bracketSpacing": true,
        "jsxSingleQuote": false,
        "endOfLine": "auto",
        "importOrder": ["^@/(.*)$", "^[./]", "^[../]"],
        "importOrderSeparation": true,
        "objectPatternSpacing": false
      }
    }
  ]
}
